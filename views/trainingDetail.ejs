<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <style>
       body {
    font-family: 'Arial', sans-serif;
    background: #f4f4f9;
    margin: 0;
    padding: 0;
    flex-direction: column;
    align-items: center;
}

.container {
    max-width: 1400px;
    margin: 20px auto;
    padding: 20px;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

h1 {
    font-size: 2.5em;
    color: #333;
    text-align: center;
    margin-bottom: 20px;
}

.training-card {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    align-items: flex-start;
    margin-bottom: 20px;
    margin-top: 50px;
}

.training-image-all {
    height: 400px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    margin-top: 50px;
    margin-left: 10px;

}

.training-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.training-info h2 {
    margin: 0 0 10px;
    font-size: 34px;
    color: #333;
}

.training-info p {
    margin: 10px 0;
    color: #666;
    font-size: 20px;
}

.training-info span {
    font-weight: bold;
    font-size: 20px;
}

.description {
    margin-left: 20px;
    font-size: 18px;
    color: #888;
    text-align: center;
}

.additional-info {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
}

.additional-info p {
    flex: 1;
    text-align: center;
    margin: 10px 0;
    color: #666;
    font-size: 20px;
}

.additional-info span {
    font-weight: bold;
    font-size: 20px;
}

.edit-link-btn {
    margin-top: 20px;
    text-align: center;
    border: none;
    border-radius: 8px;
    background-color: #666;
    color: #fff;
    padding: 10px 20px;
    text-decoration: none;
    display: inline-block;
    transition: background-color 0.3s ease;
}

.edit-link-btn:hover {
    background-color: #919191;
    cursor: pointer;
}

.edit-link {
    color: inherit;
    text-decoration: none;
}

    </style>
</head>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <%- include('partials/header') %>
    <div class="container">
        <div class="training-card"> 
            <img src="/<%= training.image %>" alt="<%= training.name %> Image" class="training-image-all">
            <div class="training-info">
                <h2><%= training.name %></h2>
                <p><span>Type:</span> <%= training.type %></p>
                <p><span>Intensity:</span> <%= training.intensity %></p>
                <p><span>Duration:</span> <%= training.duration %> minutes</p>
                <% if (training.description) { %>
                    <p class="description"><span>Description:</span> <%= training.description %></p>
                <% } %>
            </div>
        </div>
        <div class="additional-info">
            <p><span>City:</span> <%= training.city %></p>
            <p><span>Place:</span> <%= training.place %></p>
            <p><span>Date:</span> <%= training.date.toDateString() %></p>
        </div>
        <% if (user && user._id.toString() === training.user._id.toString()) { %>
            <button class="edit-link-btn"><a href="/trainings/<%= training._id %>/edit" class="edit-link">Edit Training</a></button>
        <% } %>
    </div>
</body>
</html>

